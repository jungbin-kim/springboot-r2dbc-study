<configuration>

    <property name="consoleLayoutPattern" value="%d{yyyy/MM/dd HH:mm:ss.SSS,Asia/Seoul} [%thread] %highlight(%-5level) %cyan(%logger{15}) - %msg %n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
               ${consoleLayoutPattern}
            </pattern>
        </encoder>
    </appender>

    <logger name="kim.jungbin.springboot" level="TRACE" />


    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>